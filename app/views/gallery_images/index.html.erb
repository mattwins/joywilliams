<h1>Listing gallery_images</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Url</th>
    <th>Visible</th>
    <th>Category</th>
  </tr>

<% @gallery_images.each do |gallery_image| %>
  <tr class="<%= cycle('','alt')%>">
    <td><%=h gallery_image.title %></td>
    <td><%= gallery_image.description %></td>
    <td><%=h gallery_image.url %></td>
    <td><%=h gallery_image.visible %></td>
    <td><%=h gallery_image.gallery_category_id %></td>
    <td><%= link_to 'Show', gallery_image %></td>
    <td><%= link_to 'Edit', edit_gallery_image_path(gallery_image) %></td>
    <td><%= link_to 'Destroy', gallery_image, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New gallery_image', new_gallery_image_path %>